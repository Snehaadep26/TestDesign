                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/roboto"
                            android:text="Physics"
                            android:textColor="#636363"
                            app:layout_constraintStart_toEndOf="@+id/dot1OT"
                            app:layout_constraintTop_toBottomOf="@+id/jeeMockTestOT">

                        </TextView>

                        <TextView
                            android:id="@+id/dot2OT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="\u25CF"
                            app:layout_constraintStart_toEndOf="@+id/phyTextOT"
                            app:layout_constraintTop_toBottomOf="@+id/jeeMockTestOT">

                        </TextView>

                        <TextView
                            android:id="@+id/chemTextOT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/roboto"
                            android:text="Chemistry"
                            android:textColor="#636363"
                            app:layout_constraintStart_toEndOf="@+id/dot2OT"
                            app:layout_constraintTop_toBottomOf="@+id/jeeMockTestOT">

                        </TextView>

                        <TextView
                            android:id="@+id/testQsns"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:text="45Q"
                            app:layout_constraintStart_toEndOf="@id/constCardp1"
                            app:layout_constraintTop_toBottomOf="@+id/mathsTextOT">

                        </TextView>

                        <TextView
                            android:id="@+id/dot3OT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="\u25CF"
                            app:layout_constraintStart_toEndOf="@+id/testQsns"
                            app:layout_constraintTop_toBottomOf="@+id/mathsTextOT">

                        </TextView>

                        <TextView
                            android:id="@+id/testTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="60 mins"
                            app:layout_constraintStart_toEndOf="@+id/dot3OT"
                            app:layout_constraintTop_toBottomOf="@+id/mathsTextOT">

                        </TextView>

                        <TextView
                            android:id="@+id/dot4OT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="\u25CF"
                            app:layout_constraintStart_toEndOf="@+id/testTime"
                            app:layout_constraintTop_toBottomOf="@+id/mathsTextOT">

                        </TextView>

                        <TextView
                            android:id="@+id/marksTextOT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="75 marks"
                            app:layout_constraintStart_toEndOf="@+id/dot4OT"
                            app:layout_constraintTop_toBottomOf="@+id/mathsTextOT">

                        </TextView>

                        <Button
                            android:id="@+id/buttonStartTest"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/custom_button"
                            android:textAlignment="gravity"
                            android:textColor="#FFFFFF"
                            android:text="START TEST \n Ends in 1 hr 15 mins"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/testTime"
                            app:layout_constraintVertical_bias="0.0">

                        </Button>

