                            android:text="Mathematics"
                            android:textColor="#636363"
                            app:layout_constraintStart_toEndOf="@id/constCardp1"
                            app:layout_constraintTop_toBottomOf="@+id/jeeMockTestOT">

                        </TextView>

                        <TextView
                            android:id="@+id/dot1OT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="\u25CF"
                            app:layout_constraintStart_toEndOf="@+id/mathsTextOT"
                            app:layout_constraintTop_toBottomOf="@+id/jeeMockTestOT">

                        </TextView>

                        <TextView
                            android:id="@+id/phyTextOT"
                            android:layout_width="wrap_content"
